<!DOCTYPE html>
<html>
  <head>
    <title>Container Status</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }

      h1 {
        background-color: #333;
        color: #fff;
        padding: 10px;
        text-align: center;
        margin: 0;
      }

      table {
        border-collapse: collapse;
        margin: 20px auto;
        width: 80%;
      }

      th,
      td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
      }

      th {
        background-color: #333;
        color: #fff;
      }

      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
    </style>
  </head>
  <body>
    <h1>Container Status</h1>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>State</th>
          <th>Port</th>
          <th>Mount</th>
        </tr>
      </thead>
      <tbody>
        <% containers.forEach(function(container) { %>
        <tr>
          <td><%= container.name %></td>
          <td><%= container.state %></td>
          <td><%= container.port %></td>
          <td><%= container.mount %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
